{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://musicapp.local/schemas/lesson.schema.json",
  "title": "Music Lesson",
  "type": "object",
  "required": [
    "id",
    "name",
    "category",
    "type",
    "difficulty",
    "defaultKey",
    "allowedKeys",
    "defaultTempoBpm",
    "tempoRange",
    "defaultChunkSize",
    "chunkSizeRange",
    "defaultOctave",
    "allowedOctaves",
    "notes"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "category": {
      "type": "string",
      "description": "Lesson type bucket used by library UI",
      "examples": ["3_note_pattern", "christmas_songs"]
    },
    "type": {
      "type": "string",
      "enum": ["pattern", "song"]
    },
    "difficulty": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "defaultKey": { "type": "string" },
    "allowedKeys": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "defaultTempoBpm": { "type": "integer", "minimum": 30, "maximum": 240 },
    "tempoRange": {
      "type": "object",
      "required": ["min", "max"],
      "properties": {
        "min": { "type": "integer", "minimum": 30, "maximum": 240 },
        "max": { "type": "integer", "minimum": 30, "maximum": 240 }
      },
      "additionalProperties": false
    },
    "defaultChunkSize": { "type": "integer", "minimum": 1, "maximum": 32 },
    "chunkSizeRange": {
      "type": "object",
      "required": ["min", "max"],
      "properties": {
        "min": { "type": "integer", "minimum": 1, "maximum": 32 },
        "max": { "type": "integer", "minimum": 1, "maximum": 32 }
      },
      "additionalProperties": false
    },
    "defaultOctave": { "type": "integer", "minimum": 0, "maximum": 8 },
    "allowedOctaves": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "integer", "minimum": 0, "maximum": 8 }
    },
    "notes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["pitch", "midi", "degree", "durationBeats"],
        "properties": {
          "pitch": { "type": "string" },
          "midi": { "type": "integer", "minimum": 0, "maximum": 127 },
          "degree": {
            "type": "string",
            "enum": ["Do", "Re", "Mi", "Fa", "Sol", "La", "Ti"]
          },
          "durationBeats": { "type": "number", "exclusiveMinimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "phrases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["startNoteIndex", "endNoteIndex", "label"],
        "properties": {
          "startNoteIndex": { "type": "integer", "minimum": 0 },
          "endNoteIndex": { "type": "integer", "minimum": 0 },
          "label": { "type": "string" }
        },
        "additionalProperties": false
      },
      "default": []
    },
    "patternDefinition": {
      "type": "object",
      "required": ["relativeSemitones", "length"],
      "properties": {
        "relativeSemitones": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "integer", "minimum": -24, "maximum": 24 }
        },
        "length": { "type": "integer", "minimum": 1, "maximum": 32 }
      },
      "additionalProperties": false
    },
    "source": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["preloaded", "remote"] },
        "version": { "type": "string" }
      },
      "additionalProperties": false
    },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "allOf": [
    {
      "if": { "properties": { "type": { "const": "pattern" } }, "required": ["type"] },
      "then": { "required": ["patternDefinition"] }
    }
  ],
  "additionalProperties": false
}
